<ul id="lists">
  <% sort_lists(@lists)do |list| %>
    <% if completed?(list[:todos]) %>
    <li class="complete">
    <% else %>
    <li>
    <% end %>
      <a href="/lists/<%= list[:id] %>">
        <h2><%= list[:name] %></h2>
        <p><%= incomplete_by_total(list[:todos]) %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links  do %>
  <a class='add' href="/lists/new">New List</a>
<% end %>